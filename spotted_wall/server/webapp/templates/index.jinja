{% extends "base.jinja" %}

{%  block content %}
    <h1>Messages</h1>

    <a href="/add">Add message</a>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Id</td>
                <td>Text</td>
                <td>Color</td>
                <td>Actions</td>
            </tr>
        </thead>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.text }}</td>
                <td>{{ message.color }}</td>
                <td>
                    <button class="btn btn-mini btn-danger">delete</button>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
